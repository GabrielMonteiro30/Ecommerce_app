<div class=" d-flex">
		<div class="col-10">
		  <h1><%= Sale.model_name.human(count: @sales.count) %></h1>
		</div>
		
		<div class="col-2">
		  <%= link_to t('links.new_sale'), new_sale_path, class:"btn btn-primary float-right" %>
		</div>
</div>
</br>

<table class="table table-hover">
  <thead class="table-dark">
    <tr>
      <th><%= @sales.human_attribute_name(:client_id) %></th>
      <th><%= t('description') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.client.name %></td>
        <td><% sale.products.each do | product | %>
          <p><%= product.name %></p>
        <% end %>
        </td>
        <td><%= link_to t('links.edit'), edit_sale_path(sale), class: "btn btn-primary" %></td>
        <td><%= link_to t('links.delete'), sale, method: :delete, data: { confirm: t('messages.confirm')}, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


